.sidebar
  .sidebar__header
    .sidebar__header__box
      %h3.sidebar__header__box__user-name
        = current_user.name
      %ul.sidebar__header__box__icons
        %li.list
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .sidebar__group-lists
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .sidebar__group-lists__group-name 
          = group.name
        .sidebar__group-lists__group-message 
          = group.show_last_message

